@{
    ViewData["Title"] = "Arşiv";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        /* Özel stiller buraya eklenebilir */
        /* .arsiv class'ı arşiv sayfasının özel stilleri için kullanılabilir */
    </style>
}

@section Scripts {
    <script>
        // Özel JavaScript kodları buraya eklenebilir
    </script>
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-4">Arşiv</h2>
        </div>
    </div>
    <div class="row">
        @if (Model != null)
        {
            @foreach (var record in Model)
            {
                if (record.RecordStyle ==true)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="@record.RecordImage" class="card-img-top" alt="@record.RecordName">
                            <div class="card-body">
                                <h5 class="card-title">@record.RecordName</h5>
                                <p class="card-text">Latitude: @record.RecordLatitude</p>
                                <p class="card-text">Longitude: @record.RecordLongtitude</p>
                                <p class="card-text"> Tarih: @record.RecordDate </p>
                                <p class="card-text">
                                    Status: <span class="badge bg-@(record.RecordStatus ? "danger" : "success")">
                                        @(record.RecordStatus ? "Yangın" : "Yangın Yok")
                                    </span>
                                </p>

                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="@ViewBag.ImagePath" class="card-img-top" alt="@record.RecordName">
                            <div class="card-body">
                                <h5 class="card-title">@record.RecordName</h5>
                                <p class="card-text">Latitude: @record.RecordLatitude</p>
                                <p class="card-text">Longitude: @record.RecordLongtitude</p>
                                <p class="card-text"> Tarih: @record.RecordDate </p>
                                <p class="card-text">
                                    Status: <span class="badge bg-@(record.RecordStatus ? "danger" : "success")">
                                        @(record.RecordStatus ? "Yangın" : "Yangın Yok")
                                    </span>
                                </p>

                            </div>
                        </div>
                    </div>
                }

            }
        }

        else
        {
            <div class="col-md-12">
                <p class="text-center">Arşivde kayıt bulunamadı.</p>
            </div>
        }
        
    </div>
</div>
